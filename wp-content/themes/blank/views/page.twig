{% extends "base.twig" %}

{% block content %}
	<div class="post__content-container">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<img class="post__image"src="{{ post.thumnail.src }}" alt="{{ post.post_alt}}">
             			{% if post.thumbnail %}
               			<img src="{{ post.thumbnail.src }}" alt="Thumbnail for {{ post.post_title }}">
            			{% endif %}
			<section class="article-content">
				<p class="heading-post">{{post.title}}</p>
				<div class="article-body">
					{{post.content}}
				</div>
				
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}